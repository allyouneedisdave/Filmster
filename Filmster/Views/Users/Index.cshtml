@model IEnumerable<Filmster.Models.ViewModels.UserViewModel>

@{
    ViewBag.Title = "Users";
}

<h2 class="h2-adjusted">Users</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.thisUser.Username)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.thisUser.Username)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.thisUser.UserId }) |
            @Html.ActionLink("Details", "Details", new { id=item.thisUser.UserId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.thisUser.UserId })
        </td>
    </tr>
}

</table>
